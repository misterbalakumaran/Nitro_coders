<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.balakumaran.wallet.MainActivity">
    <AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.balakumaran.wallet.MainActivity">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_x="21dp"
            android:layout_y="18dp"
            android:text="Available Balance:"
            android:textSize="18dp"
            tools:layout_editor_absoluteX="12dp"
            tools:layout_editor_absoluteY="42dp" />

        <TextView
            android:id="@+id/balance"
            android:layout_width="83dp"
            android:layout_height="32dp"
            android:layout_x="194dp"
            android:layout_y="14dp"
            android:text="100.00"
            android:textSize="18dp"
            tools:layout_editor_absoluteX="197dp"
            tools:layout_editor_absoluteY="72dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_x="281dp"
            android:layout_y="14dp"
            android:text="INR"
            android:textSize="18dp"
            tools:layout_editor_absoluteX="260dp"
            tools:layout_editor_absoluteY="54dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="319dp"
            android:layout_height="64dp"
            android:layout_x="23dp"
            android:layout_y="85dp"
            android:text="Want to add money?"
            android:textSize="34dp"
            tools:layout_editor_absoluteX="63dp"
            tools:layout_editor_absoluteY="181dp" />

        <EditText
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="71dp"
            android:layout_y="250dp"
            android:ems="10"
            android:hint="Enter the amount here"

            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="236dp" />

        <EditText
            android:id="@+id/mobno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="69dp"
            android:layout_y="176dp"
            android:ems="10"
            android:hint="Enter the mobile number"

            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="236dp" />

        <Button
            android:id="@+id/pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="109dp"
            android:layout_y="360dp"
            android:text="Click to Pay"
            tools:layout_editor_absoluteX="126dp"
            tools:layout_editor_absoluteY="372dp" />
    </AbsoluteLayout>
</ScrollView>