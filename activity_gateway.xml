            android:layout_x="70dp"
            android:layout_y="168dp"
            android:ems="10"
            android:hint="NAME ON CARD"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="75dp"
            tools:layout_editor_absoluteY="167dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="41dp"
            android:layout_y="216dp"
            android:text="EXPIRY DATE"
            tools:layout_editor_absoluteX="45dp"
            tools:layout_editor_absoluteY="214dp" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="70dp"
            android:layout_y="236dp"
            android:ems="10"
            android:hint="MM/YY"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="47dp"
            tools:layout_editor_absoluteY="235dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="48dp"
            android:layout_y="282dp"
            android:text="CVV"
            tools:layout_editor_absoluteX="42dp"
            tools:layout_editor_absoluteY="280dp" />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_x="75dp"
            android:layout_y="302dp"
            android:ems="10"
            android:hint="CVV"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="71dp"
            tools:layout_editor_absoluteY="300dp" />

        <Button
            android:id="@+id/paynow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="135dp"
            android:layout_y="374dp"
            android:text="Pay Now"
            tools:layout_editor_absoluteX="110dp"
            tools:layout_editor_absoluteY="428dp" />
    </AbsoluteLayout>
</ScrollView>